<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carolinecourtney.coolcalc.CalcActivity"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/colorPrimary">

            <TextView
                android:text="567"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="45sp"
                android:textAlignment="textEnd"
                android:layout_gravity="right"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="50dp" />
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
            android:weightSum="4"
            android:layout_height="85dp"
            android:gravity="center_horizontal">

            <Button
                android:text="7"
                android:layout_height="match_parent"
                android:id="@+id/button"
                android:layout_width="96dp"
                android:width="40dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
            android:text="8"
            android:layout_height="match_parent"
            android:id="@+id/button3"
                android:layout_width="96dp"
            android:width="40dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:text="9"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:layout_width="96dp"
            android:width="40dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <ImageButton
            android:layout_width="96dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/divide"
            android:id="@+id/imageButton"
            android:src="@drawable/divide"
            android:background="@android:color/transparent" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:weightSum="4"
            android:layout_height="85dp"
            android:gravity="center_horizontal">

            <Button
                android:text="4"
                android:layout_height="match_parent"
                android:id="@+id/button"
                android:layout_width="96dp"
                android:width="40dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
                android:text="5"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:layout_width="96dp"
                android:width="40dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
                android:text="6"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:layout_width="96dp"
                android:width="40dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <ImageButton
                android:layout_width="96dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/multiply"
                android:id="@+id/imageButton"
                android:src="@drawable/multiply"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:weightSum="4"
            android:layout_height="85dp"
            android:gravity="center_horizontal">

            <Button
                android:text="1"
                android:layout_height="match_parent"
                android:id="@+id/button"
                android:layout_width="96dp"
                android:width="40dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
                android:text="2"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:layout_width="96dp"
                android:width="40dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
                android:text="3"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:layout_width="96dp"
                android:width="40dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <ImageButton
                android:layout_width="96dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/subtract"
                android:id="@+id/imageButton"
                android:src="@drawable/subtract"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="192sp"
                android:layout_gravity="center"
                android:gravity="fill_vertical"
                android:paddingLeft="35sp">

                <Button
                    android:text="CLEAR"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingLeft="10sp"
                    android:layout_width="130sp" />
            </LinearLayout>

            <Button
                android:text="0"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:width="40dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:layout_width="96dp"
                android:layout_gravity="center" />

            <ImageButton
                android:layout_width="96dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/add"
                android:id="@+id/imageButton"
                android:src="@drawable/add"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/equal"
        android:id="@+id/imageButton3"
        android:src="@drawable/equal"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="125sp"
        android:paddingRight="40sp" />

</RelativeLayout>
